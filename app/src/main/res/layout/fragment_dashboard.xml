<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    tools:context=".DashboardFragment">

    <TextView
        android:id="@+id/dashboardWelcomeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Buddy"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/dashboardAttendanceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attendance" />

    <Button
        android:id="@+id/dashboardUploadCircularsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Circulars" />

    <Button
        android:id="@+id/dashboardDownloadCircularsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Circulars" />

    <Button
        android:id="@+id/dashboardLogoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LogOut" />


</LinearLayout>